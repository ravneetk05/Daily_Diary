<!DOCTYPE html>
<html>
<head>
  <title>Diary Entries</title>
  <style>
    body { font-family: Arial; padding: 30px; background: #eef; }
    table { width: 80%; margin: auto; border-collapse: collapse; background: white; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: center; }
    a, button { padding: 5px 10px; margin: 2px; }
    a.add { display: block; text-align: center; margin-bottom: 10px; }
  </style>
</head>
<body>
  <a href="/form" class="add">âž• Add New Diary</a>
  <table>
    <tr><th>Name</th><th>Diary Entries</th><th>Actions</th></tr>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.diary %></td>
        <td>
          <a href="/edit/<%= user._id %>">Edit</a>
          <form action="/delete/<%= user._id %>" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
